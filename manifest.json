{
    "manifest_version": 3,
  
    "name": "Pal Me - Pomodoro Timer",
    "version": "1.0.0",
    "description": "Enhance Your Time Management",
    "description": "This friendly extension would allow the user to boost their productivity ",
  
    "action": {
        "default_popup": "home.html",
        "default_icon": "pomodoro.png"
    },
  
    "icons": {
        "16": "pomodoro.png",
        "32": "pomodoro.png",
        "48": "pomodoro.png",
        "128": "pomodoro.png"
    },
  
    "timer": {
        "service_worker" : "timer.js"
    },
  
    "permissions": [
        "activeTab",
        "notifications",
        "alarms",
        "storage",
        "unlimitedStorage"
    ]
}
