{
    "manifest_version": 3,

    "name": "PomoGram - Pomodoro Timer",
    "version": "1.0.0",
    "tagline": "Enhance Your Lifestyle Healthier with Regular Breaks",
    "description": "This friendly extension would allow the user to boost their productivity and time management",

    "action": {
        "default_popup": "home.html",
        "default_icon": "./images/pomodoro.png"
    },

    "icons": {
        "16": "./images/pomodoro.png",
        "32": "./images/pomodoro.png",
        "48": "./images/pomodoro.png",
        "128": "./images/pomodoro.png"
    },

    "host_permissions": ["<all_urls>"],

    "background": {
        "service_worker" : "js/background.js"
    },

    "permissions": [
        "activeTab",
        "notifications",
        "alarms",
        "storage",
        "scripting",
        "unlimitedStorage"
    ]
}

